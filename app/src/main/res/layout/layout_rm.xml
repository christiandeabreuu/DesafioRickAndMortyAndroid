<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_16dp">

    <ImageView
        android:id="@+id/iv_character_img"
        android:layout_width="@dimen/dimen_layout_150dp"
        android:layout_height="@dimen/dimen_layout_150dp"
        android:contentDescription="@string/layout_rick_and_morty"
        android:src="@drawable/rick_morty_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_character_name"
        android:layout_width="@dimen/dimen_layout_150dp"
        android:layout_height="wrap_content"
        android:text="@string/layout_character_name"
        android:textAlignment="center"
        android:background="@color/dark"
        android:textColor="@color/white2"
        android:textStyle="bold"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_character_img" />

</androidx.constraintlayout.widget.ConstraintLayout>